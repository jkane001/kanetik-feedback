<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/kanetik_feedback_theme">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/kanetik_feedback_theme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:theme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@color/kanetik_feedback_primary_text" />
    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/kanetik_feedback_content_feedback" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>