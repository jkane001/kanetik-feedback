<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"
    android:theme="@style/RverbioTheme"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.rverb.feedback.presentation.FeedbackActivity"
    tools:showIn="@layout/rverb_activity_feedback">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/rverb_feedback_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/rverb_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/rverb_feedback_hint"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLines="3" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/rverb_email_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rverb_feedback_layout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/rverb_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/rverb_email_address_hint"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/rverb_additional_data_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rverb_email_layout"
        tools:text="@string/rverb_extra_data_description" />

    <ImageView
        android:id="@+id/rverb_thumbnail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rverb_border"
        android:contentDescription="@string/rverb_screenshot"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rverb_additional_data_description" />

    <ImageView
        android:id="@+id/rverb_thumbnail_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/rverb_remove_screenshot"
        android:padding="4dp"
        android:src="@drawable/rverb_remove_icon"
        android:tint="@color/rverb_red"
        app:layout_constraintRight_toRightOf="@+id/rverb_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/rverb_thumbnail" />

    <TextView
        android:id="@+id/rverb_powered_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/rverb_rverbio_logo"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/rverb_rverbio_logo"
        android:text="@string/rverb_powered_by"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
