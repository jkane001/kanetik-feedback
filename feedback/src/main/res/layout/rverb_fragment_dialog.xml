<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rverb_powered_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rverb_dialog_padding"
        android:layout_marginStart="@dimen/rverb_dialog_padding"
        android:drawableLeft="@drawable/rverb_rverbio_logo"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/rverb_rverbio_logo"
        android:text="@string/rverb_powered_by"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/rverb_dialog_fields_padding"
        android:paddingRight="@dimen/rverb_dialog_fields_padding"
        android:paddingTop="8dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/rverb_feedback_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/rverb_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/rverb_feedback_hint"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="3" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/rverb_email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/rverb_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/rverb_email_address_hint"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/rverb_additional_data_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/rverb_dialog_padding"
        android:paddingRight="@dimen/rverb_dialog_padding"
        android:textSize="12sp"
        tools:text="@string/rverb_extra_data_description" />

    <ScrollView
        android:id="@+id/rverb_system_data_scrollview"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="@dimen/rverb_dialog_padding"
        android:layout_marginRight="@dimen/rverb_dialog_padding"
        android:layout_marginTop="4dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/rverb_screenshot_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp">

                <ImageView
                    android:id="@+id/rverb_thumbnail"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rverb_border"
                    android:contentDescription="@string/rverb_screenshot"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/rverb_thumbnail_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:contentDescription="@string/rverb_remove_screenshot"
                    android:padding="2dp"
                    android:src="@drawable/rverb_remove_icon"
                    android:tint="@color/rverb_red" />
            </FrameLayout>

            <TextView
                android:id="@+id/rverb_system_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        style="?attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|bottom">

        <Button
            android:id="@+id/rverb_cancel"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/rverb_submit"
            android:layout_toStartOf="@+id/rverb_submit"
            android:text="@android:string/cancel" />

        <Button
            android:id="@+id/rverb_submit"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@android:string/ok" />
    </RelativeLayout>
</LinearLayout>