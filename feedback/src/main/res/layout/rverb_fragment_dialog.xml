<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rverb_powered_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="?attr/dialogPreferredPadding"
        android:layout_marginStart="?attr/dialogPreferredPadding"
        android:drawableLeft="@drawable/rverb_rverbio_logo"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/rverb_rverbio_logo"
        android:text="Powered by Rverb.io"
        android:textSize="10sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="?attr/dialogPreferredPadding"
        android:paddingRight="?attr/dialogPreferredPadding">

        <RelativeLayout
            android:id="@+id/additional_info"
            android:backgroundTint="@android:color/background_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/rverb_screenshot_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp">

                <ImageView
                    android:id="@+id/rverb_thumbnail"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:cropToPadding="true"
                    android:background="@drawable/rverb_border"/>

                <ImageView
                    android:id="@+id/rverb_thumbnail_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:padding="4dp"
                    android:src="@drawable/rverb_remove_icon"
                    android:tint="@android:color/holo_red_dark" />
            </FrameLayout>

            <TextView
                android:id="@+id/additional_data_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/rverb_screenshot_container"
                android:textSize="12sp" />
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/rverb_problem_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/additional_info"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/rverb_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textCapSentences"
                android:hint="How can we help you?"
                android:maxLines="6" />

        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/system_data_scrollview"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="?attr/dialogPreferredPadding"
        android:layout_marginRight="?attr/dialogPreferredPadding"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/system_data_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/system_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        style="?attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|bottom"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/rverb_cancel"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/rverb_submit"
            android:layout_toStartOf="@+id/rverb_submit"
            android:text="@android:string/cancel" />

        <Button
            android:id="@+id/rverb_submit"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@android:string/ok" />
    </RelativeLayout>
</LinearLayout>